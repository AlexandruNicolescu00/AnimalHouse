<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col-lg-6">
      <form id="form">
        <!-- Error messages -->
        {{> messages }}
        <!-- Email input -->
        <div>
          <label class="form-label" for="form-email">Email</label>
          <input
            type="email"
            id="form-email"
            class="form-control"
            name="email"
            aria-label="Inserisci la tua email per accedere."
            required
            placeholder="my@email.com"
          />
        </div>
        <!-- Password input -->
        <div class="form-outline mb-3">
          <label class="form-label" for="form-password">Password</label>
          <div>
            <input
              type="password"
              id="form-password"
              class="form-control"
              name="password"
              aria-label="Inserisci la tua password per accedere."
              required
              placeholder="password"
            />
          </div>
        </div>
        <div class="text-center pb-3">
          <a href="/reset">Hai dimenticato la password?</a>
        </div>
        <div class="text-center">
          <button
            type="submit"
            class="btn btn-warning"
            id="form-submit"
          >Accedi</button>
        </div>

      </form>
    </div>
  </div>
</div>
<script src="./js/login.js"></script>