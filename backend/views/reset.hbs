<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col align-items-center">
            <img class="mx-auto d-block responsive-img" src="/img/logo.png" alt="Animal House logo">
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col">
            <form class="form-signup" action="/psw-reset" method="POST">
                {{> messages }}
                <div class="mb-3 w-100">
                    <label for="InputEmail" class="form-label">Email</label>
                    <input type="email" class="form-control" id="InputEmail" name="email" aria-describedby="email"
                        required>
                </div>
                <div class="mb-3 w-100  d-grid col-12 ">
                    <button type="submit" class="btn btn-success verdino">Invia</button>
                </div>
                <div class="mb-1">
                    <a href="/login">← torna indietro</a>
                </div>
            </form>
        </div>
    </div>